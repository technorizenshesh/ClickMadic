<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_black_left_arrow"/>

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/liked_star"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_140sdp"
                android:background="@color/white"
                android:src="@drawable/dabar_lal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/light_black"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_60sdp"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:text="Package name"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Specification"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Two times fatser increase in weight and height"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Babies experience better sleeping pattern"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Increase Blood Circulation"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/button_color"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_down_blue_arrow"
                        android:text="See More"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:contentPadding="@dimen/_8sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:elevation="@dimen/_15sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/rlItem1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_height="@dimen/_100sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:scaleType="fitXY"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/accu_check"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true" />

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/liked_star"/>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Accu-Check Active"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="This product cannot be"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp">

                                    <TextView
                                        android:id="@+id/tvProductPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$755"
                                        android:singleLine="true"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:textColor="@color/black"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/tvProductPrice"
                                        android:layout_marginLeft="@dimen/_10sdp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$855"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_centerHorizontal="true" />

                                        <View
                                            android:layout_width="@dimen/_25sdp"
                                            android:layout_height="2dp"
                                            android:layout_centerVertical="true"
                                            android:background="@color/cross_gray"/>

                                    </RelativeLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvItem1"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            app:contentPadding="@dimen/_8sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:elevation="@dimen/_15sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/rlItem2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_5sdp">

                                    <ImageView
                                        android:id="@+id/productImage"
                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_height="@dimen/_100sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:scaleType="fitXY"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/accu_check"/>

                                    <TextView
                                        android:id="@+id/tvDiscount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true" />

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/liked_star"/>

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tvProductName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Accu-Check Active"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvProductDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="This product cannot be"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp">

                                    <TextView
                                        android:id="@+id/tvProductPrice1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$755"
                                        android:singleLine="true"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:textColor="@color/black"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/tvProductPrice1"
                                        android:layout_marginLeft="@dimen/_10sdp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$855"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_centerHorizontal="true" />

                                        <View
                                            android:layout_width="@dimen/_25sdp"
                                            android:layout_height="2dp"
                                            android:layout_centerVertical="true"
                                            android:background="@color/cross_gray"/>

                                    </RelativeLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/gray_outline_back"
                android:textSize="@dimen/_15sdp"
                android:text="1"/>

            <TextView
                android:id="@+id/btAddCart"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/edit_cart"
                android:paddingRight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@drawable/button_blue"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Add to bag"/>

        </LinearLayout>



    </RelativeLayout>


</layout>