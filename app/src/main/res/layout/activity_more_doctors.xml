<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_white_back"/>

            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Online"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:elevation="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_search">

                <ImageView
                    android:id="@+id/searchResImg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="0.1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:src="@drawable/ic_search_white"/>

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:hint="Search"
                    android:layout_weight="0.8"
                    android:background="@null"
                    android:inputType="textVisiblePassword"
                    android:paddingTop="@dimen/_2sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp" />

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvNearByDoctors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:contentPadding="@dimen/_5sdp"
                    android:elevation="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCattext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:layout_toRightOf="@+id/ivProfile"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="General Medicine"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:contentPadding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/rlLab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/trans_light_blue_oval">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/lab" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_13sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:layout_toRightOf="@+id/rlLab"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="General Medicine"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/llDoctorProfile1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_40sdp">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:civ_border_color="@color/light_black"
                                                app:civ_border_width="@dimen/_1sdp"
                                                android:src="@drawable/doctor_profile"/>

                                            <View
                                                android:layout_width="@dimen/_8sdp"
                                                android:layout_height="@dimen/_8sdp"
                                                android:layout_marginBottom="@dimen/_3sdp"
                                                android:layout_marginRight="@dimen/_3sdp"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentBottom="true"
                                                android:background="@drawable/green_oval"/>

                                        </RelativeLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:singleLine="true"
                                            android:visibility="gone"
                                            android:text="36 votes" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:singleLine="true"
                                            android:visibility="gone"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:textColor="@color/black"
                                            android:text="36 Feedback" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:text="Jhon Smith" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Medio Generalist" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:text="26 years of experience" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:singleLine="true"
                                            android:text="₹ 500 onwards" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:text="26 Votes" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:text="26 Feedback" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/request1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:textAllCaps="false"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:background="@drawable/dark_blue_button_back"
                                        android:padding="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:text="Request"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_40sdp">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:civ_border_color="@color/light_black"
                                                app:civ_border_width="@dimen/_1sdp"
                                                android:src="@drawable/doctor_profile"/>

                                            <View
                                                android:layout_width="@dimen/_8sdp"
                                                android:layout_height="@dimen/_8sdp"
                                                android:layout_marginBottom="@dimen/_3sdp"
                                                android:layout_marginRight="@dimen/_3sdp"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentBottom="true"
                                                android:background="@drawable/green_oval"/>

                                        </RelativeLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:singleLine="true"
                                            android:visibility="gone"
                                            android:text="36 votes" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:singleLine="true"
                                            android:visibility="gone"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:textColor="@color/black"
                                            android:text="36 Feedback" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:text="Jhon Smith" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Medio Generalist" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:text="26 years of experience" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:singleLine="true"
                                            android:text="₹ 500 onwards" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:text="26 Votes" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:text="26 Feedback" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/request2"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:textAllCaps="false"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:background="@drawable/dark_blue_button_back"
                                        android:padding="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:text="Request"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>