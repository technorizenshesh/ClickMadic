<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:elevation="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_search">

            <ImageView
                android:id="@+id/searchResImg"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_search_white"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:hint="Search"
                android:layout_weight="0.9"
                android:background="@null"
                android:inputType="textVisiblePassword"
                android:paddingTop="@dimen/_2sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:contentPadding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:elevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/therapist_img3"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:text="Anonymous"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:src="@drawable/chat_blue"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/_20sdp"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:src="@drawable/call_blue"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/_20sdp"/>

                                <ImageView
                                    android:id="@+id/chat1"
                                    android:layout_width="0dp"
                                    android:src="@drawable/video_blue"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/_20sdp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:text="Dermatologist,Skin ethics Skin Clinic &amp; Dermatologist Center "/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:drawableLeft="@drawable/ic_time_blue"
                                        android:text="Time: 11:30am"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:drawableLeft="@drawable/ic_date_blue"
                                        android:text="21/07/2020"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:drawableLeft="@drawable/edit_location_gray"
                                    android:text="Branch: Fermacia Del Amrauoi"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="3"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Experience"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:text="20 years"/>

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Likes"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:text="125"/>

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Reviews"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10sdp"
                                            android:textColor="@color/black"
                                            android:text="25"/>

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:gravity="end"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/green"
                                    android:text="Available Today"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:paddingRight="@dimen/_10sdp"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:background="@drawable/button_5_round_back"
                                        android:text="Reschedule"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12sdp"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:paddingRight="@dimen/_10sdp"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:background="@drawable/button_5_round_back"
                                        android:text="Cancel"/>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>