<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/bottom_round_blue"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:elevation="@dimen/_10sdp"
                        app:contentPadding="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="T3-T4-TSH"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:text="$20"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/_18sdp"
                                    android:src="@drawable/delete_gray"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="Liver Function Tests"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:text="$28"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/_18sdp"
                                    android:src="@drawable/delete_gray"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="T3-T4-TSH"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:text="$20"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/_18sdp"
                                    android:src="@drawable/delete_gray"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.8"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="Pickup charges"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:text="$0"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:background="@drawable/dotted_line"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.8"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="Total"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:text="$68"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_cross_white"/>

                    <TextView
                        android:id="@+id/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Book test &amp; packages online.."/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/edit_outline_round"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_40sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:text="+ Add more tests"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/blue_outline"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="1 Test Added"/>

                <TextView
                    android:id="@+id/sponsored2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="$ 300"/>

            </LinearLayout>

            <TextView
                android:id="@+id/bt_continue"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:gravity="center"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:background="@drawable/button_blue"
                android:textColor="@color/white"
                android:text="Continue"/>

        </LinearLayout>

    </RelativeLayout>

</layout>