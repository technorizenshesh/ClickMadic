<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_back"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivBack"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_white_back"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Medical Specialities"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bottom_round_blue"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:elevation="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_search">

                        <ImageView
                            android:id="@+id/searchResImg"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="0.1"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_search_white"/>

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:hint="Search"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:inputType="textVisiblePassword"
                            android:paddingTop="@dimen/_2sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_toRightOf="@+id/ivProfile"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:text="Select Speciality"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:id="@+id/lldental1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="General Medicine"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvWomenHealth"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:id="@+id/llWomen2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Women's Health"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Child Specialist"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Genral Surgery"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Eye Specialist"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Dental Care"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Ayurveda"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/light_black2"
                            app:contentPadding="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp"
                                    android:background="@drawable/trans_light_blue_oval">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/lab" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_toRightOf="@+id/ivProfile"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:text="Heart"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</layout>