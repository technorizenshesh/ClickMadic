<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_round_blue">

                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="Hello!!"/>

                        <TextView
                            android:id="@+id/tvEditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:padding="@dimen/_5sdp"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white"
                            android:text="Edit Profile"/>

                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Anastasia Taylor"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/nurse_light_blue_back"
                        android:padding="@dimen/_10sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/doctor_with_nurse"/>

                    </RelativeLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue"
                            android:weightSum="3"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWomenCal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Women's\nCalender"/>

                                <View
                                    android:id="@+id/WomenCalView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_3sdp"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvClinicalHistory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Clinical\nHistory"/>

                                <View
                                    android:id="@+id/ClinicalHistoryView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_3sdp"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvLabTest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Laboratory\nTests"/>

                                <View
                                    android:id="@+id/labTestView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_3sdp"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvMedicalPrep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Medical\nPriscription"/>

                                <View
                                    android:id="@+id/MedicalPrepView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_3sdp"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvMedicalReminder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Medical\nReminder"/>

                                <View
                                    android:id="@+id/MedicalReminderView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_3sdp"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvMedicalCertificate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Medical\nCertificates"/>

                                <View
                                    android:id="@+id/MedicalCertificateView"
                                    android:layout_width="match_parent"
                                    android:visibility="invisible"
                                    android:layout_height="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvIncomingInvoice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_5sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Incoming\nInvoices"/>

                                <View
                                    android:id="@+id/IncomingInvoiceView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_3sdp"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/white"/>

                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frameContainer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</layout>