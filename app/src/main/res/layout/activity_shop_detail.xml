<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_back"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:padding="@dimen/_8sdp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/ivGoodsImage1"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_90sdp"
                                app:riv_border_color="@color/black"
                                app:riv_border_width="@dimen/_1sdp"
                                android:scaleType="fitXY"
                                app:riv_corner_radius="@dimen/_10sdp"
                                android:src="@drawable/medical_store1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_15sdp"
                                    android:text="North store cardiac Imaging, P.C."/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:textColor="@color/white"
                                    android:drawablePadding="@dimen/_3sdp"
                                    android:drawableLeft="@drawable/ic_location_white"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp"
                                    android:text="2035 Lokewalk RD.101 New IT Park New Delhi India"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_height="wrap_content">

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:rating="4.5"
                                        android:theme="@style/RatingBar"
                                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:text="4.5"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/blue"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:elevation="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_search">

                        <ImageView
                            android:id="@+id/searchResImg"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="0.1"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_search_white"/>

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:hint="Search"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:inputType="textVisiblePassword"
                            android:paddingTop="@dimen/_2sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvItem1"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        app:contentPadding="@dimen/_8sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:elevation="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rlItemDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/productImage"
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/medicines1"/>

                                <TextView
                                    android:id="@+id/tvDiscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/liked_star"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvProductName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Advil"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tvProductDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="This product cannot be"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/black"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvProductPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$ 30"
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:textColor="@color/blue"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvItem2"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        app:contentPadding="@dimen/_8sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:elevation="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/medicines1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/liked_star"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Advil"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="This product cannot be"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/black"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$ 30"
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:textColor="@color/blue"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</layout>