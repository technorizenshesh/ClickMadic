<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_back"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        app:civ_border_width="@dimen/_2sdp"
                        android:visibility="invisible"
                        android:layout_marginTop="@dimen/_35sdp"
                        app:civ_border_color="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/profile3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Shop"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/blue"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:elevation="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_search">

                        <ImageView
                            android:id="@+id/searchResImg"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="0.1"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:src="@drawable/ic_search_white"/>

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_10sdp"
                            android:hint="Search"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:inputType="textVisiblePassword"
                            android:paddingTop="@dimen/_2sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvShop1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:contentPadding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/ivGoodsImage"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_90sdp"
                            app:riv_border_color="@color/black"
                            app:riv_border_width="@dimen/_1sdp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="@dimen/_10sdp"
                            android:src="@drawable/medical_store1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvShippmentName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp"
                                android:text="North store cardiac Imaging, P.C."/>

                            <TextView
                                android:id="@+id/tvDeliveryDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_3sdp"
                                android:drawableLeft="@drawable/edit_location"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:text="2035 Lokewalk RD.101 New IT Park New Delhi India"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_height="wrap_content">

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:rating="4.5"
                                    android:theme="@style/RatingBar"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:text="4.5"/>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvShop2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:contentPadding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/ivGoodsImage1"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_90sdp"
                            app:riv_border_color="@color/black"
                            app:riv_border_width="@dimen/_1sdp"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="@dimen/_10sdp"
                            android:src="@drawable/medical_store1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp"
                                android:text="North store cardiac Imaging, P.C."/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_3sdp"
                                android:drawableLeft="@drawable/edit_location"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:text="2035 Lokewalk RD.101 New IT Park New Delhi India"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_height="wrap_content">

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:rating="4.5"
                                    android:theme="@style/RatingBar"
                                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:text="4.5"/>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</layout>