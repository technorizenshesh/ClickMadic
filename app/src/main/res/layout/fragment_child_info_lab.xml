<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_back">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_60sdp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_15sdp"
                        android:elevation="@dimen/_10sdp"
                        app:contentPadding="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:elevation="@dimen/_10sdp"
                                    android:id="@+id/doctorProfileImage"
                                    android:layout_centerHorizontal="true"
                                    app:civ_border_color="@color/black"
                                    android:src="@drawable/therapist_img3"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:text="Bio Pharma Laboratory"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Firstname"
                                android:padding="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:inputType="textVisiblePassword"
                                android:textColorHint="@color/black"
                                android:background="@drawable/gray_outline_back"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Lastname"
                                android:padding="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:inputType="textVisiblePassword"
                                android:textColorHint="@color/black"
                                android:background="@drawable/gray_outline_back"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Date Of Birth"
                                android:padding="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:focusableInTouchMode="false"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:textColorHint="@color/black"
                                android:background="@drawable/gray_outline_back"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ID Number"
                                android:padding="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:inputType="textVisiblePassword"
                                android:textColorHint="@color/black"
                                android:background="@drawable/gray_outline_back"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_gravity="center_vertical"
                                    android:text="Choose Gender"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:orientation="horizontal">

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/blue"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:text="Male"/>

                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/blue"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:text="Female"/>

                                    </RadioGroup>

                                    <TextView
                                        android:id="@+id/tvQuesMark"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12sdp"
                                        android:text="\?"
                                        android:background="@drawable/gray_outline_oval"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvSexDisp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:visibility="gone"
                                    android:text="DoctorGo accepts all gender identities. However, in order to use your insurance coverage or for your doctor to prescribe medication, you must specify your child's gender as male or female"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:text="By continuing, I agree that I am legally authorized to perform medical laboratory sampling"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp"/>

                                </LinearLayout>



                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/ic_cross_gray"/>

                        <TextView
                            android:id="@+id/headerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:text="Book test &amp; packages online.."/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/blue_outline"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="1 Test Added"/>

                <TextView
                    android:id="@+id/sponsored2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="$ 300"/>

            </LinearLayout>

            <TextView
                android:id="@+id/bt_continue"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:gravity="center"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:background="@drawable/button_blue"
                android:textColor="@color/white"
                android:text="Continue"/>

        </LinearLayout>

    </RelativeLayout>

</layout>